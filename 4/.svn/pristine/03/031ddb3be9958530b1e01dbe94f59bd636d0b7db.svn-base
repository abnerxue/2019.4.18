<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ck.springboot.mapper.DiagnosisMapper" >
  <resultMap id="BaseResultMap" type="com.ck.springboot.pojo.Diagnosis" >
    <result column="id" property="id" jdbcType="INTEGER" />
    <result column="desp" property="diagnosisName" jdbcType="VARCHAR" />
    <result column="icd10" property="icd10" jdbcType="VARCHAR" />
  </resultMap>
  <insert id="insert" parameterType="com.ck.springboot.pojo.Diagnosis" >
    insert into t_diagnosis (id, desp, icd10
      )
    values (#{id,jdbcType=INTEGER}, #{desp,jdbcType=VARCHAR}, #{icd10,jdbcType=VARCHAR}
      )
  </insert>
  <insert id="insertSelective" parameterType="com.ck.springboot.pojo.Diagnosis" >
    insert into t_diagnosis
    <trim prefix="(" suffix=")" suffixOverrides="," >
      <if test="id != null" >
        id,
      </if>
      <if test="desp != null" >
        desp,
      </if>
      <if test="icd10 != null" >
        icd10,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides="," >
      <if test="id != null" >
        #{id,jdbcType=INTEGER},
      </if>
      <if test="desp != null" >
        #{desp,jdbcType=VARCHAR},
      </if>
      <if test="icd10 != null" >
        #{icd10,jdbcType=VARCHAR},
      </if>
    </trim>
  </insert>
  	<select id="getAllDiagnosisFilter" resultMap="BaseResultMap">
		select t.* from t_diagnosis t where t.id between (#{pageNo}-1)*#{pageSize}+1 and #{pageSize}*#{pageNo}
		<if test="filter!=null and filter!=''">
			AND (t.desp like '%'+#{filter}+'%' or t.icd10 like '%'+#{filter}+'%')
		</if>
	</select>
	<select id="getAllDiagnosis" resultMap="BaseResultMap">
		select * from t_diagnosis t where 1=1
		<if test="filter!=null and filter!=''">
			AND (t.desp like '%'+#{filter}+'%' or t.icd10 like '%'+#{filter}+'%')
		</if>
	</select>
	<select id="getDiagnosisCount" resultType="java.lang.Integer">
		select count(*) from t_diagnosis 
	</select>
	<select id="getDiagnosisFilterCount" resultType="java.lang.Integer">
		select count(*) from t_diagnosis t where (t.desp like '%'+#{filter}+'%' or t.icd10 like '%'+#{filter}+'%')
	</select>
</mapper>