		select * from t_config t where t.id in(10,11)
	</select>
	<delete id="deleteByPrimaryKey"
		parameterType="java.lang.Integer">
		delete from t_config
		where id = #{id,jdbcType=INTEGER}
	</delete>
	<insert id="insert"
		parameterType="com.ck.springboot.pojo.Config">
		insert into t_config (id, name, values
		)
		values (#{id,jdbcType=INTEGER}, #{name,jdbcType=VARCHAR},
		#{values,jdbcType=VARCHAR}
		)
	</insert>
	<insert id="insertSelective"
		parameterType="com.ck.springboot.pojo.Config">
		insert into t_config
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="id != null">
				id,
			</if>
			<if test="name != null">
				name,
			</if>
			<if test="values != null">
				values,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="id != null">
				#{id,jdbcType=INTEGER},
			</if>
			<if test="name != null">
				#{name,jdbcType=VARCHAR},
			</if>
			<if test="values != null">
				#{values,jdbcType=VARCHAR},
			</if>
		</trim>
	</insert>
	<update id="updateByPrimaryKeySelective"
		parameterType="com.ck.springboot.pojo.Config">
		update t_config
		<set>
			<if test="name != null">
				name = #{name,jdbcType=VARCHAR},
			</if>
			<if test="values != null">
				values = #{values,jdbcType=VARCHAR},
			</if>
		</set>
		where id = #{id,jdbcType=INTEGER}
	</update>
	<update id="updateConfig" parameterType="java.util.List">
            update t_config
            <trim prefix="set" suffixOverrides=",">
             <trim prefix="[values] =case" suffix="end,">
                 <foreach collection="config" item="i" index="index">
                         <if test="i.values!=null">
                          when name=#{i.name} then #{i.values}
                         </if>
                 </foreach>
              </trim>
             </trim>
            where
            <foreach collection="config" separator="or" item="a" index="index" >
              name=#{a.name}
          </foreach>
	</update>
	<update id="updateRangeConfig" parameterType="java.util.List">
            update t_config
            <trim prefix="set" suffixOverrides=",">
