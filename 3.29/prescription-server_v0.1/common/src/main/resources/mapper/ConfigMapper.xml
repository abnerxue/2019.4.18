		type="com.ck.springboot.pojo.Config">
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="name" property="name" jdbcType="VARCHAR" />
		<result column="values" property="values" jdbcType="VARCHAR" />
	</resultMap>
	<sql id="Base_Column_List">
		id, name, values
	</sql>
	<select id="selectByPrimaryKey" resultMap="BaseResultMap"
		parameterType="java.lang.Integer">
		select
		<include refid="Base_Column_List" />
		from t_config
		where id = #{id,jdbcType=INTEGER}
	</select>

	<select id="selectAllConfig" resultMap="BaseResultMap">
		select * from t_config t where t.id in(1,2,3)
	</select>
	<select id="selectAllRangeConfig" resultMap="BaseResultMap">
		select * from t_config t where t.id in(4,5)
